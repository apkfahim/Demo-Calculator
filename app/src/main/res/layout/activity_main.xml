<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/io"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:padding="30dp"

        android:background="@color/iowindows"

        android:orientation="vertical">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="40sp"
            android:textColor="@color/green"
            android:text="0"
            />
        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="50sp"
            android:textColor="@color/green"
            android:text="0"
            />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttoncleayer"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="C"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_breaketlift"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="("
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_breaketright"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text=")"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_devision"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="/"
                style="@style/buttonstyle"
                />

        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="7"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="8"
                style="@style/buttonstyle"
                android:id="@+id/button_8"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="9"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_multiple"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="*"
                style="@style/buttonstyle"
                />

        </TableRow>
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="4"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="5"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="6"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_subtraction"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="-"
                style="@style/buttonstyle"
                />

        </TableRow>
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="1"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="2"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="3"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_addition"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="+"
                style="@style/buttonstyle"
                />

        </TableRow>
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="0"
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_dot"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="."
                style="@style/buttonstyle"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_equals"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:text="="
                android:layout_weight="1"
                style="@style/buttonstyle"
                />

        </TableRow>





    </TableLayout>


</LinearLayout>